
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class=>"form-signin", :id =>"sign-in-form"}) do |f| %>
  <h2 class="form-signin-heading">Welcome Back!</h2>

  <%= f.email_field :email, :placeholder => "Email Address",  :class=> "form-control", :style => "width:100%", autofocus: true, :value => resource.email.empty? ? session[:email] : resource.email %>
  <%= f.password_field :password, :placeholder => "Password", :class=> "form-control", :style => "width:100%", autocomplete: "off" %>
  <% if devise_mapping.rememberable? -%>
  <div class="checkbox">
    <%= f.check_box :remember_me%> <%= f.label :remember_me, :style=>"display:inline-block" %>
  </div>
  <% end %>
  <%= f.submit "Sign in" , :class=> "btn btn-primary btn-lg btn-block" %>
  <div class="pull-left">
    <%= render 'devise/shared/links' %>
  </div>

<% end %>