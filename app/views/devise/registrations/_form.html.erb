<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id =>"sign-up-form"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <div><%= f.label :name, :class=>"white-text"%><br />
      <%= f.text_field :name, autofocus: true, :class=>"form-control", :value => resource.name ? resource.name : session[:name] %>
    </div>
  </div>
  <div class="form-group">
    <div><%= f.label :email, :class=>"white-text"%><br />
      <%= f.email_field :email, :class=>"form-control", :value => resource.email.empty? ? session[:email] : resource.email %>
    </div>
  </div>
  <div class="form-group">
    <div><%= label :group, :group, :class=>"white-text" %><br />
      <%= text_field :group, :group, :placeholder=>"Enter new or existing group name", :class=>"form-control", :value => session[:group_name] %>
    </div>
  </div>
  <div class="form-group">
    <div><%= f.label :password, :class=>"white-text" %><br />
      <%= f.password_field :password, :class=>"form-control", autocomplete: "off" %></div>
  </div>
  <div class="form-group">
    <div><%= f.label :password_confirmation, :class=>"white-text"%><br />
      <%= f.password_field :password_confirmation, :class=>"form-control", autocomplete: "off" %></div>
  </div>
    <div><%= f.submit "Sign up", :class=> "btn btn-primary btn-medium"%></div>

<% end %>

