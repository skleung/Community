<div class="modal fade" id="meal-form" aria-hidden="true" style="display:none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Create a Meal</h4>
      </div>
      <%= form_for @meal, :html => { :class => 'form'} do |f| %>
      <div class="modal-body">
        <% if @meal.errors.any? %>
          <div class = "alert alert-danger" role="alert">
            <div><b>Error(s)</b></div>
            <% @meal.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name, :class => 'control-label' %>
          <%= f.text_field(:name, placeholder: "(i.e. chicken fried rice)", class: "form-control")%>
        </div>

        <!-- select chef from available diners -->
        <div class = "form-group">
          <%= f.label :chef_id, "Chef", :class => 'control-label' %>
          <%= f.collection_select(:chef_id , Diner.all, :id, :name, {:selected => current_diner.id}, {class: "form-control"}) %>
        </div>

        <div class="form-group">
          <%= f.label :date, :class => 'control-label' %>
          <%= f.text_field :date, :id => 'datepicker', :value => Date.today.strftime('%m/%d/%Y'), class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :diners_attending, :class => 'control-label' %>
            <%= 
              f.collection_select :diner_ids, Diner.where(id: current_group_ids).all, :id, :name, {}, {:"data-placeholder"=>"Add your friends", :class=>"form-control chosen chosen-select chosen-select-no-results chosen-select-no-single chosen-select-deselect", multiple: true}
            %>
        </div>

        <div class="form-group">
          <%= f.label :ingredients, :class => 'control-label' %>
            <%= 
              f.collection_select :ingredient_ids, Ingredient.where(group: current_group, finished: [false, nil]).all, :id, :name, {}, {:"data-placeholder"=>"Add ingredients used", :class=>"form-control chosen chosen-select chosen-select-no-results chosen-select-no-single chosen-select-deselect", :selected=>[8,9],  multiple: true}
            %>
        </div>

        <div class="form-group">
          <%= f.label :finished_ingredients, :class => 'control-label' %>
            <%= 
              collection_select nil, :finished_ingredient_ids, Ingredient.where(group: current_group, finished: [false, nil]).all, :id, :name, {}, {:"data-placeholder"=>"Add finished ingredients", :class=>"form-control chosen chosen-select chosen-select-no-results chosen-select-no-single chosen-select-deselect", :selected=>@meal.ingredients.where(finished: true).ids, multiple: true}
            %>
        </div>

      </div>
      <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary', :id => 'meal-submit' %>
        <button type="button" class="btn" data-dismiss="modal">Cancel</button>
      </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
  $("#datepicker").datepicker();
  <% if @meal.date %>
    var rubydate = "<%= @meal.date.strftime('%Y-%m-%d') %>"
    var parts = rubydate.split("-");
    var dt = new Date(parseInt(parts[0], 10), // year
                parseInt(parts[1], 10) - 1, // month
                parseInt(parts[2], 10)); // day
    $("#datepicker").datepicker("setDate", dt );
  <% end %>
  <% if @show_modal %>
    console.log('show_modal true');
    $("#meal-form").modal();
  <% end %>
  $("#meal-form").on("shown.bs.modal", function(){
    $(".chosen", this).chosen();
  })
</script>

