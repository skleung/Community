<!DOCTYPE html>
<html>
<head>
  <title>Community</title>
  <%= stylesheet_link_tag    "application", "http://fonts.googleapis.com/css?family=Ubuntu:400,700", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= yield :head %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%if current_diner %>
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <%=link_to "community", dashboard_path, :class=>"navbar-brand" %>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            <li><%=link_to "Meals", meals_path %></li>
            <li><%=link_to "Diners", diners_path %></li>
            <li><%=link_to "Ingredients", ingredients_path %></li>
            <li><%=link_to "Groups", groups_path %></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= render 'devise/menu/login_items' %></li>
          </ul>

        </div>
      </div>
    </div>
  <% end %>
  <%= bootstrap_flash %>

  <% if current_diner %><div class="container" style="padding-top: 50px"><% end %>
      <%= yield %>
  <% if current_diner %></div><% end %>

<%= yield :javascript %>
</body>
</html>
