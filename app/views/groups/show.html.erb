<%- model_class = Group -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Admin:</strong></dt>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= link_to @group.admin, @group.admin %></dd>
  <dd><%= @group.name %></dd>
  <dt>Diners:</dt>
  <% @diners.each do |diner| %>
    <dd><%= link_to diner, diner %></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              groups_path, :class => 'btn'  %>
  <% if verify_yourself_or_admin(@group.admin_id) %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_group_path(@group), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                group_path(@group),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
