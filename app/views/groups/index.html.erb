<%- model_class = Group -%>
<div class="page-header">
  <h1><%= @only_my_groups ? 'Your' : 'All' %> Groups</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:admin) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group %></td>
        <td><%= link_to group.admin, group.admin %></td>
        <td><%=l group.created_at %></td>
        <td>
          <% unless group.diners.include? current_diner %>
            <%= link_to 'Join Group', attempt_join_group_path(group), :class => 'btn btn-mini btn-primary' %>
          <% end %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_group_path(group), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      group_path(group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_group_path,
            :class => 'btn btn-primary' %>

<% if @only_my_groups %>
  <%= link_to 'Find Other Groups',
              groups_path,
              :class => 'btn btn-primary' %>
<% else %>
  <%= link_to 'Switch Groups',
              my_groups_path,
              :class => 'btn btn-primary' %>
<% end %>
